if [ -z "${TURN_NO_MONGO}" ] ; then

	testlibmongoc
	ER=$?
	if ! [ ${ER} -eq 0 ] ; then
		${ECHO_CMD} "MongoDB found."
	else
		TURN_NO_MONGO="-DTURN_NO_MONGO"
	fi
